# Configuration de l'application GMAO Trans'urb
APP_NAME="GMAO Trans'urb"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8080

# Configuration de la base de données
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=gmao_transurb
DB_USERNAME=gmao_user
DB_PASSWORD=gmao_password
DB_ROOT_PASSWORD=root_password

# Configuration du cache et des sessions
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Configuration Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration des files d'attente
QUEUE_CONNECTION=redis

# Configuration du mail (à adapter selon vos besoins)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@gmao-transurb.local"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration des logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Configuration Broadcast
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Configuration des fichiers
FILESYSTEM_DISK=local

# Configuration Vite (pour le développement)
VITE_APP_NAME="${APP_NAME}"

# Configuration spécifique GMAO
GMAO_COMPANY_NAME="Trans'urb"
GMAO_SUPPORT_EMAIL="support@transurb.local"
GMAO_MAINTENANCE_MODE=false

# Configuration des notifications
NOTIFICATION_STOCK_ALERT_THRESHOLD=10
NOTIFICATION_MAINTENANCE_REMINDER_DAYS=7

# Configuration des rapports PDF
PDF_DEFAULT_FONT=Arial
PDF_DEFAULT_FONT_SIZE=12

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_ENCRYPT=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Configuration PHPMyAdmin
PHPMYADMIN_PORT=8085
